#include <iostream>
using namespace std;
int LEG, nota, cant, cont;
bool flag;
char preg;
double prom, suma;
unsigned int cont1 = 0;

int main()
{
inicio:
	cout << "ingrese legajo del alumno" << endl;
	cin >> LEG;
	cout << "¿cuantas notas desea cargar?" << endl;
	cin >> cant;
	cout << "ingrese notas para sacar el promedio " << endl;
	flag = false;
	while (cont != cant)
	{
		cin >> nota;
		if (nota == 0)
		{
			flag = true;
			suma = suma + nota;
		}
		else
		{
			suma = suma + nota;
		}
		cont++;
	}
	if (flag == true)
	{
		cout << "se detecto una nota igual a 0;" << endl << "desea volver a cargar? y/n ";
		cin >> preg;

		if (preg == 'y')
		{
			while (true)
			{
				cont1++;
				if (cont1 % 1000 == 0)
				goto inicio;
			}
		}

	}
	cout << " la carga de notas a finalizado. ¿ desea sacar el promedio y/n?" << endl;
	cin >> preg;

	if (preg == 'y')
	{
		prom = suma / cant;
		cout << "el promedio de alumno " << LEG << " es " << prom << endl;
	}
	else
	{

		system("pause");
		while (true)
		{
			cont1++;
			if (cont1 % 1000 == 0)
			goto inicio;
		}
	}

}
